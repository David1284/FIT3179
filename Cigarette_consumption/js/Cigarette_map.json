  
{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Cigarette consumpertion per capita ",
  "width": 600,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/David1284/FIT3179/main/map.topojson",
    "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
  },
  "transform": [{
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/David1284/FIT3179/main/Cigarette_consumption/data/Life_expectancy_cigarette_consumption.csv"
        },
        "key": "Country",
        "fields": ["Cigarette consumption"]
      }
    },
    {"calculate": "datum['Cigarette consumption'] ", "as": "Cigarette_consumption"}
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "Cigarette_consumption",
      "type": "quantitative",
      "scale": {"type": "linear"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Cigarette consumption", "type": "quantitative"}
    ]
  }

}
