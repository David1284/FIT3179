{
 "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
 "width": 500,
 "height": 400,
 "title": "Relationship between cigarette consumption and life expectancy",
 "data": {
 "url": "https://raw.githubusercontent.com/David1284/FIT3179/main/Cigarette_consumption/data/Life_expectancy_cigarette_consumption.csv"
 },
 "mark": "circle",
 "encoding": {
 "x": {
 "field": "Cigarette consumption",
 "type": "quantitative",
 "title": "Cigarette consumption",
 "axis": {"tickCount": 4},
 "scale": {"type": "log", "domain": [1, 10000]}
 },
 "y": {
 "field": "Life expectancy",
 "type": "quantitative",
 "axis": {"tickCount": 4},
  "scale": {"type": "linear", "domain": [40, 90]}
 },
 "color": {
 "field": "Country",
 "type": "nominal"
 },
 "size": {
   "field": "Cigarette consumption",
"scale": {
 "type": "threshold",
 "domain": [1000,3000,6000],
 "range": [40,80,120]
 },
 "legend": {"format": ".1s"}
},
 "tooltip": [
 {"field": "Country", "type": "nominal"},
 {"field": "Cigarette consumption", "type": "quantitative", "format": ".2f"},
 {"field": "Life expectancy", "type": "quantitative", "format": ".2f", "title": "Average life expectancy"},
 {"field": "male", "type": "quantitative", "format": ".2f", "title": "Female life expectancy"},
 {"field": "female", "type": "quantitative", "format": ".2f", "title": "male life expectancy"}
 ]
 }
}
